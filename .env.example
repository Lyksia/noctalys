# ===================================
# NOCTALYS ENVIRONMENT VARIABLES
# ===================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/noctalys?schema=public"

# Authentication
BETTER_AUTH_SECRET="your-secret-key-here-change-in-production"
BETTER_AUTH_URL="http://localhost:3003"

# Stripe (Paiements)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# File Manager (for images and audio)
FILE_MANAGER_API_KEY="your-file-manager-api-key-64-characters-here"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3003"
NODE_ENV="development"

# Rate Limiting (optionnel)
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"
